{
  "name": "vue-component-devtool",
  "version": "0.1.0",
  "private": false,
  "main": "dist/index.umd.js",
  "scripts": {
    "dev": "vue-cli-service serve",
    "docs": "npm run build:docs && npm run version-push",
    "build:docs": "vue-cli-service build",
    "build:lib": "vue-cli-service lint && vue-cli-service build --dest dist --target lib --name index src/index.js",
    "lint": "vue-cli-service lint",
    "version-push": "node version-push.js && git add version.md && git commit -m \"chore(version): New version\" -uno && ls",
    "open": "dev serve -o docs"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.0.0",
    "@vue/cli-plugin-eslint": "^4.0.0",
    "@vue/cli-service": "^4.0.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "vue-dotmd-loader": "^0.2.0",
    "vue-template-compiler": "^2.6.10",
    "core-js": "^3.3.2",
    "vue": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "no-console": [0]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "eslintIgnore": [
    "**/*.md"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
